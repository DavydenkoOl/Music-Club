<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Music_Club</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Music_Club.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #004d47; padding-bottom: 0;">
   
    <header>
       
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow" style="margin-bottom:0">
            <div class="container-fluid" >
                <a class="navbar-brand" asp-area="" asp-controller="MusicClips" asp-action="Index" style="font-size:24px;font-weight:bold">MusicClub</a>
                @if (Context.Session.GetString("FirstName") == null)
                {
                    <div style="display: flex;width: 20%">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login" style="font-size:18px;font-weight:bold">Войти</a>

                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register" style="font-size:18px;font-weight:bold">Регистрация</a>
                    </div>
                }
                else
                {
                    <span class="navbar-brand"> @Context.Session.GetString("FirstName")  @Context.Session.GetString("LastName")</span>
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">Выйти</a>
                }
            </div>
        </nav>
        
    </header>
    <div style=" width: 100%; height:82vh; padding-bottom: 0;">
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container" style="display:flex">
            &copy; 2024 - Music_Club
            <div style="width:800px;height:100px; border-left:1px solid #B5B8B1;border-right:1px solid #B5B8B1;background-color:aqua"></div>
        </div>
       
    </footer> *@
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
